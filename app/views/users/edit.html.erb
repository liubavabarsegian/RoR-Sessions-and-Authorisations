<h1>Editing user</h1>

<%= form_with(model: @user, class: "form") do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize( @user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div>
    <%= form.label :nick, style: "display: block"%>
    <%= form.text_field :nick, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control", type: "email"  %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password, type: "password", class: "form-control" %>
  </div>

  <div>
    <%= form.submit("Save", class: "btn btn-primary btn-lg") %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this user", @user %> |
  <%= link_to "Back to users", users_path %>
</div>
